# HeyReach API Configuration
HEYREACH_API_KEY=your_heyreach_api_key_here
HEYREACH_API_URL=https://api.heyreach.io/v1

# Claude/Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MCP Server Configuration
MCP_SERVER_PORT=3000

# Database Configuration (if using external DB)
DATABASE_URL=sqlite:./data/agent.db

# Safety Limits
MAX_DAILY_LINKEDIN_CONNECTIONS=100
MAX_DAILY_LINKEDIN_MESSAGES=150
MAX_DAILY_EMAILS=500

# Campaign Configuration
DEFAULT_FOLLOW_UP_DELAY_HOURS=48
MESSAGE_RATE_LIMIT_SECONDS=120

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/agent.log

# Feature Flags
ENABLE_AUTO_SEND=false
ENABLE_AUTO_FOLLOWUP=true
ENABLE_AUTO_TAGGING=true
